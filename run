#! /bin/bash

DIR=$(date +"%Y-%m-%d-%T")
mkdir -p results/$DIR/bayesian
# mkdir -p results/$DIR/cic

N_DATA_SAMPLES=1000
N_MCMC_SAMPLES=1000
N_MCMC_WARMUP=250
MAX_EM_ITERS=5
MAX_MLE_ITERS=500
MIN_CLUSTERS=3
MAX_CLUSTERS=3

# python run_experiment.py \
#     --score 'Bayesian' \
#     --n_data_samples $N_DATA_SAMPLES \
#     --n_mcmc_samples $N_MCMC_SAMPLES \
#     --n_mcmc_warmup $N_MCMC_WARMUP \
#     --max_em_iters $MAX_EM_ITERS \
#     --max_mle_iters $MAX_MLE_ITERS \
#     --min_clusters $MIN_CLUSTERS \
#     --max_clusters $MAX_CLUSTERS \
#     --output_path results/$DIR/bayesian

python run_experiment.py \
    --score 'Bayesian' \
    --n_data_samples $N_DATA_SAMPLES \
    --n_mcmc_samples $N_MCMC_SAMPLES \
    --n_mcmc_warmup $N_MCMC_WARMUP \
    --max_em_iters $MAX_EM_ITERS \
    --max_mle_iters $MAX_MLE_ITERS \
    --min_clusters $MIN_CLUSTERS \
    --max_clusters $MAX_CLUSTERS \
    --dataset 'faithful' \
    --output_path results/$DIR/bayesian

